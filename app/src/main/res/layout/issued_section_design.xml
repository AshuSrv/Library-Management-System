<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/unn"
    android:layout_height="160dp">


    <TextView
        android:id="@+id/bookName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bookname"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/authorName"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="40dp"
        android:text="Author Name:"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="15sp"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/rating"
        android:layout_width="55dp"
        android:layout_height="20dp"
        android:layout_marginTop="120dp"
        android:text="Rating:"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="15sp"
        android:textStyle="italic|bold" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="80dp"
        android:text="  Issued By:"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="15sp"
        android:textStyle="italic|bold" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/rating"
        android:layout_alignParentEnd="true"
        android:id="@+id/statusofthebook"
        android:textAlignment="center"
        android:layout_marginEnd="0dp"
        android:text="Issued"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/duedate"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/rating"
        android:layout_marginLeft="54dp"
        android:layout_marginBottom="-1dp"
        android:layout_toRightOf="@id/rating"
        android:text="Genre :"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="15sp"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/author"
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/authorName"
        android:text="Cristie Agatha"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/issuer"
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:layout_marginTop="80dp"
        android:layout_toRightOf="@id/authorName"
        android:textStyle="bold"
        android:text="Cristiano Ronaldo"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/rate"
        android:layout_width="52dp"
        android:layout_height="20dp"
        android:textStyle="bold"
        android:layout_marginTop="120dp"
        android:layout_toRightOf="@id/rating"
        android:text="4.5"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/genreValue"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="120dp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/duedate"
        android:text="Horror,Crime"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/coverPic"
        android:layout_width="99dp"
        android:layout_height="101dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/author"
        app:srcCompat="@mipmap/ic_launcher" />

</RelativeLayout>